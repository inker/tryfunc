{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "sourceMap": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "pretty": true,
      "declaration": true,
      "alwaysStrict": true,
      // "allowSyntheticDefaultImports": true,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "downlevelIteration": true,
      "lib": [
        "esnext"
      ],
      "outDir": "dist"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "text"
    ]
  }
  